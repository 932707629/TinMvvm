<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="demoViewModel"
            type="com.soushin.tinmvvm.mvvm.viewmodel.DemoViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_main_delegate"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bnv_main_delegate"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnv_main_delegate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            app:menu="@menu/main_bottom_navigation"
            android:background="@color/white"
            app:itemTextColor="@drawable/bottom_navigation_item_selector"
            app:itemIconTint="@drawable/bottom_navigation_item_selector"
            app:layout_constraintTop_toBottomOf="@+id/vp_main_delegate"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>